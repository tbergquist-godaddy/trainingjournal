generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MY_SQL_DB")
}

model Exercise {
  id     String @id @default(cuid())
  name   String
  userId String
}

model Program {
  id     String @id @default(cuid())
  name   String
  userId String
  weeks  Week[]
}

model Week {
  id        String  @id @default(cuid())
  name      String
  Program   Program @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId String
  days      Day[]
}

model Day {
  id     String @id @default(cuid())
  name   String
  weekId String
  Week   Week   @relation(fields: [weekId], references: [id], onDelete: Cascade)
}
